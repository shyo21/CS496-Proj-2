<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/character"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true">


    <ImageView
        android:id="@+id/chBack"
        android:layout_width="333dp"
        android:layout_height="366dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:srcCompat="@drawable/chback" />

    <ImageButton
        android:id="@+id/room_create_button"
        android:layout_width="30dp"
        android:layout_height="180dp"
        android:background="@color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/makeroom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toBottomOf="@+id/chBack" />

    <ImageView
        android:id="@+id/character_img"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/chBack"
        app:layout_constraintEnd_toEndOf="@+id/chBack"
        app:layout_constraintStart_toStartOf="@+id/chBack"
        app:layout_constraintTop_toTopOf="@+id/chBack"
        app:layout_constraintVertical_bias="0.325"
        app:srcCompat="@drawable/among_us" />

    <ImageButton
        android:id="@+id/find_room"
        android:layout_width="30dp"
        android:layout_height="180dp"
        android:background="@color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/findroom"
        android:layout_marginStart="5dp"
        app:layout_constraintLeft_toRightOf="@+id/room_create_button"
        app:layout_constraintTop_toBottomOf="@+id/chBack" />

    <Button
        android:id="@+id/memory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="추억찾기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/find_room"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/character_img" />

    <LinearLayout
        android:id="@+id/colorbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/character_img">

        <Button
            android:id="@+id/red_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:backgroundTint="@color/red" />

        <Button
            android:id="@+id/yellow_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:backgroundTint="@color/yellow" />

        <Button
            android:id="@+id/green_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:backgroundTint="@color/green" />

        <Button
            android:id="@+id/blue_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:backgroundTint="@color/blue" />

        <Button
            android:id="@+id/purple_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:backgroundTint="@color/sky_blue" />

        <Button
            android:id="@+id/black_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:backgroundTint="@color/purple" />


    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.07" />


</androidx.constraintlayout.widget.ConstraintLayout>