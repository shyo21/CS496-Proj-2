<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/character_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/character_background"
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:layout_marginTop="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/chback"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/character_img"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="@+id/character_background"
        app:layout_constraintStart_toStartOf="@+id/character_background"
        app:layout_constraintTop_toTopOf="@+id/character_background"
        app:srcCompat="@drawable/among_us"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/character_makeRoom"
        android:layout_width="50dp"
        android:layout_height="250dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:background="@color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/makeroom"
        app:layout_constraintStart_toStartOf="@id/character_background"
        app:layout_constraintTop_toBottomOf="@+id/character_background"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck,ImageContrastCheck" />

    <ImageButton
        android:id="@+id/character_enterRoom"
        android:layout_width="50dp"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:background="@color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/enterroom"
        app:layout_constraintLeft_toRightOf="@+id/character_makeRoom"
        app:layout_constraintTop_toBottomOf="@+id/character_background"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck,ImageContrastCheck" />

    <ImageButton
        android:id="@+id/character_findRoom"
        android:layout_width="50dp"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:background="@color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/findroom"
        app:layout_constraintStart_toEndOf="@+id/character_enterRoom"
        app:layout_constraintTop_toBottomOf="@+id/character_background"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck,ImageContrastCheck" />

    <ImageButton
        android:id="@+id/character_memory"
        android:layout_width="50dp"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:background="@color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/memories"
        app:layout_constraintStart_toEndOf="@+id/character_findRoom"
        app:layout_constraintTop_toBottomOf="@+id/character_background"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck,ImageContrastCheck" />

    <LinearLayout
        android:id="@+id/character_colorBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/character_background"
        app:layout_constraintStart_toStartOf="@+id/character_background"
        app:layout_constraintTop_toBottomOf="@+id/character_img">

        <Button
            android:id="@+id/red_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:backgroundTint="@color/red"
            tools:ignore="ButtonStyle,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <Button
            android:id="@+id/yellow_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:backgroundTint="@color/yellow"
            tools:ignore="ButtonStyle,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <Button
            android:id="@+id/green_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:backgroundTint="@color/green"
            tools:ignore="ButtonStyle,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <Button
            android:id="@+id/blue_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:backgroundTint="@color/blue"
            tools:ignore="ButtonStyle,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <Button
            android:id="@+id/purple_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:backgroundTint="@color/sky_blue"
            tools:ignore="ButtonStyle,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <Button
            android:id="@+id/black_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:backgroundTint="@color/purple"
            tools:ignore="ButtonStyle,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>